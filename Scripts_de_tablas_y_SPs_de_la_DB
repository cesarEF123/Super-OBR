CREATE PROCEDURE [dbo].[sp_ObtenerProductosPorCategoria]
    @categoria NVARCHAR(100)
AS
BEGIN
    SELECT 
        p.id,
        p.nombre,
        p.descripcion,
        p.precio,
        p.stock,
        c.nombre AS nombre_categoria
    FROM Productos p
    INNER JOIN Categorias c ON p.categoria_id = c.id
    WHERE c.nombre = @categoria;
END
