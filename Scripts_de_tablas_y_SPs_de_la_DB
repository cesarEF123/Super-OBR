CREATE PROCEDURE [dbo].[sp_ObtenerPedidosPorUsuario]
    @usuario_id INT
AS
BEGIN
    SELECT 
        id,
        fecha_pedido,
        total,
        estado
    FROM Pedidos
    WHERE usuario_id = @usuario_id
    ORDER BY fecha_pedido DESC;
END;
GO
