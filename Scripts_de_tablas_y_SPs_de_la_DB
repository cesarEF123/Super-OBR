CREATE PROCEDURE [dbo].[sp_ObtenerProductos]
AS
BEGIN
    SELECT 
        p.id,
        p.nombre,
        p.descripcion,
        p.precio,
        p.stock,
        c.nombre AS nombre_categoria
    FROM Productos p
    JOIN Categorias c ON p.categoria_id = c.id;
END
