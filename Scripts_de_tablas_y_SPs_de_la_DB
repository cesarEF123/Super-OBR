CREATE PROCEDURE [dbo].[sp_ObtenerProductoPorId]
	@id INT
AS
BEGIN
	SELECT p.*, c.nombre as nombre_categoria FROM Productos as p
	INNER JOIN Categorias as c
	ON p.categoria_id = c.id
	WHERE p.id = @id
END;
GO
