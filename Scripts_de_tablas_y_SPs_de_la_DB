CREATE PROCEDURE [dbo].[sp_ObtenerUsuarioPorId]
	@id INT
AS
BEGIN
	SELECT u.nombre, u.apellido, u.email, r.nombre FROM Usuarios as u
	INNER JOIN Roles as r ON u.role_id = r.id
	WHERE u.id = @id
END
GO
