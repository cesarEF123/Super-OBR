        p.nombre AS nombre,
        pp.cantidad AS cantidad,
        pp.precio_unitario AS precio_unitario
    FROM Pedido_Producto pp
    INNER JOIN Productos p ON p.id = pp.producto_id
    WHERE pp.pedido_id = @pedido_id
END
