CREATE PROCEDURE [dbo].[sp_CrearCarrito]
    @usuario_id INT
AS
BEGIN
    INSERT INTO Carritos (usuario_id, fecha_creacion, estado)
    VALUES (@usuario_id, GETDATE(), 'Activo')

    SELECT SCOPE_IDENTITY() -- devuelve el id del nuevo carrito
END
GO
